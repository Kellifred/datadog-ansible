pipeline {
    agent any
    
    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/Kellifred/datadog-ansible.git'
            }
        }
        
        stage('Run Ansible playbook') {
            steps {
                sh 'ansible-playbook -i inventory/hosts playbook.yml'
            }
        }
    }
}